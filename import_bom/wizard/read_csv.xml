<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="import_bom_wizard" model="ir.ui.view">
        <field name="name">import_bom_wizard</field>
        <field name="model">import.bom.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="csv_file"/>
                    </group>
                    <group>
                        <field name="csv_delimiter"/>
                        <field name="bom_type"/>
                    </group>
                </group>
                <footer>
                    <button string="Import" class="btn-primary" name="import_bom" type="object"/>
                    <button string="Close" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_import_bom_wizard" model="ir.actions.act_window">
        <field name="name">Import BoM</field>
        <field name="res_model">import.bom.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>